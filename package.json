{
  "name": "pr-reviewer-electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "build-react": "webpack --mode=production",
    "build-react-dev": "webpack --mode=development", 
    "start": "npm run build-react && npx electron .",
    "dev": "concurrently \"npm run dev:webpack\" \"npm run dev:electron\"",
    "dev:webpack": "webpack serve --mode=development --open=false",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development nodemon --exec \"npx electron .\" --watch main.js --watch preload.js --ext js",
    "build": "npm run build-react && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch", 
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration"
  },
  "author": "Daniel Vazaƒç",
  "license": "MIT",
  "description": "Local AI PR Reviewer - Electron App with DaisyUI",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-webpack": "^7.9.0",
    "@playwright/test": "^1.40.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1",
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@vercel/webpack-asset-relocator-loader": "^1.10.0",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.1",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "daisyui": "^5.1.24",
    "electron": "^37.3.1",
    "electron-builder": "^24.13.3",
    "electron-mock-ipc": "^0.3.12",
    "electron-reload": "^2.0.0-alpha.1",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "fs-extra": "^11.3.2",
    "html-webpack-plugin": "^5.6.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nock": "^13.4.0",
    "node-loader": "^2.1.0",
    "nodemon": "^3.1.10",
    "playwright": "^1.40.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-refresh": "^0.17.0",
    "spectron": "^19.0.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.12",
    "tmp": "^0.2.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "wait-on": "^9.0.1",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.1",
    "@tailwindcss/typography": "^0.5.18",
    "axios": "^1.12.2",
    "marked": "^16.3.0",
    "openai": "^4.104.0",
    "simple-git": "^3.28.0"
  },
  "build": {
    "appId": "com.danielvazac.pr-reviewer",
    "productName": "PR Reviewer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/.cache"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
