{
  "name": "pr-reviewer-electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "build-css": "tailwindcss -i ./style.css -o ./dist/style.css --watch",
    "build-css-prod": "tailwindcss -i ./style.css -o ./dist/style.css --minify",
    "start": "npm run build-css-prod && electron .",
    "dev": "concurrently \"npm run build-css\" \"cross-env NODE_ENV=development nodemon --exec electron . --ext js,html,css --ignore node_modules/ --ignore dist/\"",
    "build": "npm run build-css-prod && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration"
  },
  "author": "Daniel Vazaƒç",
  "license": "MIT",
  "description": "Local AI PR Reviewer - Electron App with DaisyUI",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tailwindcss/cli": "^4.1.12",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "daisyui": "^5.0.50",
    "electron": "^37.3.1",
    "electron-builder": "^24.13.3",
    "electron-mock-ipc": "^0.3.12",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nock": "^13.4.0",
    "nodemon": "^3.0.1",
    "playwright": "^1.40.0",
    "spectron": "^19.0.0",
    "tailwindcss": "^4.1.12",
    "tmp": "^0.2.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.1",
    "@tailwindcss/typography": "^0.5.18",
    "axios": "^1.11.0",
    "marked": "^16.3.0",
    "openai": "^4.104.0",
    "simple-git": "^3.28.0"
  },
  "build": {
    "appId": "com.danielvazac.pr-reviewer",
    "productName": "PR Reviewer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "dist/style.css",
      "node_modules/**/*",
      "!node_modules/.cache"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
